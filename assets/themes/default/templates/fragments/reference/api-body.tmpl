<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Method</th>
        <th>HTTP Request</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
    [: range .Methods :]
    <tr>
      <td>
        <a id="[: .ID :]" href="[:$.SpecPath:]/reference/[: $.API.ID :]/[: .ID :][: if $.Version :]?v=[: $.Version :][: end :]">[: .Method :]</a>
      </td>
      <td>
        <pre>[: uc .Method :]&nbsp;[: .Path :]</pre></td>
      </td>
      <td class="hyphenate Hyphenator600hide">
        [: .Name :]
      </td>
    </tr>
    [: end :]
    </tbody>
  </table>
</div>
