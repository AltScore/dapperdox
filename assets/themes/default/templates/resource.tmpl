[: template "fragments/reference/version_header" (ext . "TitleSuffix" "resource" ) :]

[: overlay "banner" . :]

[: overlay "description" . :]

<h2 class="sub-header">Methods</h2>

[: overlay "methods" . :]

<ul class="">
  [: range .Resource.Methods :]
    <li><a href="[: $.SpecPath :]/reference/[: .API.ID :]/[: .ID :][: if $.Version :]?v=[: $.Version :][: end :]">[: .Method :]</a> - [: .Name :]</li>
  [: end :]
</ul>

<h2 class="sub-header">Resource</h2>

[: overlay "resource" . :]

<pre><code>[: .Resource.Schema :]</code></pre>

[: if .Resource.Example :]
<h2 class="sub-header">Example</h2>

[: overlay "example" . :]
<pre><code>[: .Resource.Example :]</code></pre>
[: end :]

<h2 class="sub-header">Properties</h2>

[: overlay "properties" . :]

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Description</th>
        <th>Additional</th>
      </tr>
    </thead>
    <tbody>
      [: template "fragments/reference/properties" .Resource :]
    </tbody>
  </table>
</div>

[: overlay "additional" . :]
